{
	"extends": "@tsconfig/svelte/tsconfig.json",
	"compilerOptions": {
		"allowJs": true,
		"allowSyntheticDefaultImports": true,
		"allowUnreachableCode": false,
		"baseUrl": ".",
		"esModuleInterop": true,
		"importHelpers": true,
		"inlineSources": true,
		"isolatedModules": true,
		"lib": [
			"DOM",
			"ES5",
			"ES2015",
			"ES2016",
			"ES2017"
		],
		"module": "ESNext",
		"moduleResolution": "Bundler",
		"noImplicitAny": true,
		"strictNullChecks": true,
		"target": "ES2017",
		"types": [
			"svelte",
			"node"
		]
	},
	"include": [
		"**/*.ts",
		"**/*.tsx",
		"**/*.svelte"
	]
}
